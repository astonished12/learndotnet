
@{
    ViewData["Title"] = "UploadImages";
}

<h2>UploadImages</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Gallery" asp-action="UploadImages">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="formFiles" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" />
        </div>
    </div>
</form>